{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "no-plusplus": 0,
    "no-underscore-dangle": 0,
    "react/sort-comp": 0,
    "require-jsdoc": 0,
    "valid-jsdoc": 0,
    "react/jsx-filename-extension": 0
  }
}
